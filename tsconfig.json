{
    "compilerOptions": {
      "target": "es6", // Especifica a versão do JavaScript para a qual o código será compilado
      "module": "commonjs", // Define o sistema de módulos a ser usado
      "outDir": "./dist", // Diretório de saída para os arquivos compilados
      "strict": true, // Habilita verificações de tipo mais rigorosas
      "esModuleInterop": true // Permite a interoperabilidade com módulos ES6
    },
    "include": ["./**/*.ts"], // Inclui todos os arquivos TypeScript no projeto
    "exclude": ["node_modules"] // Exclui a pasta node_modules
  }
  